<div class="section">
  <div class="container">
  <div class="columns is-centered">

      <div class="column is-4">

      <h2 class="title is-2">Edit</h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>

        <div class="field">
          <div class="control">
            <%= f.input :name, autofocus: true, input_html: { class:"input" }, wrapper: false, label_html: { class:"label" } %>
          </div>
        </div>

        <div class="field">
	  	    <div class="control">
	          <%= f.input :email, input_html: { class:"input" }, wrapper: false, label_html: { class:"label" } %>
	  	    </div>
		    </div>

        <div class="field">
          <div class="control">
            <%= f.input :gender, as: :radio_buttons, collection: ['Male', 'Female', "Other"], wrapper: false, label_html: { class:"label" } %>
          </div>
        </div>

        <div class="field">
          <div class="control">
            <%= f.input :password, input_html: { class:"input" }, wrapper: false, label_html: { class:"label" }, hint: ("leave it blank if you don't want to change it") %>
          </div>
        </div>

         <div class="field">
          <div class="control">
            <%= f.input :birthday, input_html: { class:"input" }, wrapper: false, label_html: { class:"label" } %>
          </div>
        </div>

        <div class="field">
          <div class="control">
            <%= f.input :password_confirmation, input_html: { class: "input" }, wrapper: false, label_html: { class: "label" } %>		
          </div>
        </div> 

        <div class="field">
          <div class="control">
            <%= f.input :current_password, input_html: { class: "input" }, wrapper: false, label_html: { class: "label" }, hint: ("We need your current password to confirm your changes") %>		
          </div>
        </div> 

        <div class="field">
          <div class="control">
            <%= f.button :submit, "Update", class:"button is-info is-medium" %>
          </div>
        </div>

    <% end %>

      <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

      <%= link_to "Back", :back %>
		</div>
		</div>
	</div>
</div> 

